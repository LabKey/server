<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="pipelineJobService" class="org.labkey.pipeline.api.PipelineJobServiceImpl">
        <property name="globusClientPropertiesList">
            <list>
                <bean class="org.labkey.pipeline.api.properties.GlobusClientPropertiesImpl">
                    <property name="jobFactoryType" value="PBS" />
                    <property name="location" value="cluster" />
                    <property name="queue" value="xtandem" />
                    <property name="javaHome" value="/usr/lib/jvm/java-6-sun-1.6.0.26" />
                    <property name="labKeyDir" value="/media/sf_labkey/build/deploy" />
                    <property name="globusServer" value="https://192.168.1.78:8443" />
                    <property name="pathMapper">
                        <bean class="org.labkey.pipeline.xstream.PathMapperImpl">
                            <property name="localIgnoreCase" value="false"/>
                            <property name="remoteIgnoreCase" value="true"/>
                            <property name="pathMap">
                                <map>
                                    <entry key="file:/C:/temp" value="file:/media/sf_HostFolder"/>
                                    <entry key="file:/C:/labkey" value="file:/media/sf_labkey"/>
                                </map>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
